-- Referencia a la plataforma (la parte donde est치 el script)
local plataforma = script.Parent


-- Tiempo (en segundos) que la plataforma estar치 visible
local tiempoVisible = 2

-- Tiempo (en segundos) que la plataforma estar치 invisible
local tiempoInvisible = 2


-- Bucle infinito que se ejecuta todo el tiempo
while true do

	-- 游녤 PLATAFORMA VISIBLE
	-- La plataforma se puede ver
	plataforma.Transparency = 0

	-- El jugador puede pararse encima
	plataforma.CanCollide = true


	-- Esperamos el tiempo visible
	task.wait(tiempoVisible)


	-- 游녤 PLATAFORMA INVISIBLE
	-- La plataforma no se puede ver
	plataforma.Transparency = 1

	-- El jugador atraviesa la plataforma
	plataforma.CanCollide = false


	-- Esperamos el tiempo invisible
	task.wait(tiempoInvisible)
end

